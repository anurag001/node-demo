pipeline {
    agent any
    
    stages {
        stage('Preparation') {
            steps {
                checkout scm
                sh "git rev-parse --short HEAD > .git/commit-id"
                sh 'chmod -R 755 /app'
            }
        }

        stage('Test') {
            steps {
                nodejs(nodeJSInstallationName: 'nodejs') {
                    sh 'npm install'
                }
            }
        }

        stage('Deploy Docker Compose') {
            steps {
                script {
                    dir('/app') {
                        sh 'docker build -t anuragwebshark/node-demo'
                        sh 'docker run anuragwebshark/node-demo'
                    }
                }
            }
        }
    }
}
